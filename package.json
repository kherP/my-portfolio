{
  "name": "my-portfolio",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "init-urls": "node ./scripts/prepareUrls.js",
    "buildWrap": "node ./scripts/postBuild.js",
    "postinit-urls": "prettier --write $npm_package_config_endpointsIndexPath",
    "prebuild": "npm run init-urls",
    "build": "svelte-kit build",
    "postbuild": "npm run buildWrap",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "node-fetch": "^3.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "sass": "^1.43.4",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "type": "module",
  "dependencies": {
    "clsx": "^1.1.1",
    "svelte-icon": "^1.2.0"
  },
  "config": {
    "rootUrl": "https://api.github.com/gists/b46b7b8695b6e87db6397127d473b2ca",
    "endpointsIndexPath": "src/lib/constants/apiIndex.ts",
    "outputFolder": "build"
  }
}
